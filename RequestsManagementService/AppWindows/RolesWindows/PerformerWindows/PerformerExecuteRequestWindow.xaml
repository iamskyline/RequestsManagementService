<Window x:Class="RequestsManagementService.AppWindows.RolesWindows.PerformerWindows.PerformerExecuteRequestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RequestsManagementService.AppWindows.RolesWindows.PerformerWindows"
        mc:Ignorable="d"
        Title="Взять заявку в работу"
        MinHeight="250" MinWidth="400"
        Height="250" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="40"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock Text="Вы действительно хотите взять данную заявку в работу?"
                       FontSize="20"
                       TextWrapping="Wrap"
                       Margin="0 0 0 20"/>
            <Button x:Name="GetToWorkButton"
                    Margin="10 0 10 0"
                    Content="Подтвердить"
                    FontSize="20"
                    MaxWidth="200"
                    MaxHeight="50"
                    Click="GetToWorkButton_OnClick"/>
        </StackPanel>
    </Grid>
</Window>
